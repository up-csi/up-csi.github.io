{
    "name": "up-csi",
    "version": "0.0.0",
    "description": "The official website for UP CSI.",
    "type": "module",
    "packageManager": "pnpm@8.11.0",
    "source": "src/index.html",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "sync": "svelte-kit sync",
        "fmt": "prettier --plugin=prettier-plugin-svelte --plugin=prettier-plugin-tailwindcss --check .",
        "fmt:fix": "prettier --plugin=prettier-plugin-svelte --plugin=prettier-plugin-tailwindcss --write .",
        "lint": "pnpm lint:html && pnpm lint:css && pnpm lint:js && pnpm lint:svelte",
        "lint:html": "linthtml src/**/*.html",
        "lint:css": "stylelint src/**/*.css",
        "lint:js": "eslint **/*.{js,svelte,ts}",
        "lint:svelte": "svelte-check --tsconfig ./tsconfig.json"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^5.0.0",
        "@linthtml/linthtml": "^0.9.5",
        "@linthtml/linthtml-config-recommended": "^0.1.0",
        "@sveltejs/adapter-static": "^2.0.3",
        "@sveltejs/kit": "^1.27.6",
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.10",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "autoprefixer": "^10.4.16",
        "cssnano": "^6.0.1",
        "eslint": "^8.54.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-svelte": "^2.35.1",
        "htmlnano": "^2.1.0",
        "postcss-prune-var": "^1.1.1",
        "prettier": "^3.1.0",
        "prettier-plugin-svelte": "^3.1.2",
        "prettier-plugin-tailwindcss": "^0.5.7",
        "stylelint": "^15.11.0",
        "stylelint-config-standard": "^34.0.0",
        "stylelint-config-tailwindcss": "^0.0.7",
        "svelte": "^4.2.8",
        "svelte-check": "^3.6.2",
        "tailwindcss": "^3.3.5",
        "terser": "^5.24.0",
        "typescript": "^5.3.2",
        "vite": "^4.5.0"
    }
}
